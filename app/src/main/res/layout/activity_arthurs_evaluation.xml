<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_arthurs_evaluation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liner236.sensortracker.ArthursEvaluation">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_long"
        android:layout_alignStart="@+id/txt_long"
        android:layout_marginTop="11dp"
        android:id="@+id/txt_lati" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_long"
        android:layout_below="@+id/btn_lokal_gps"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text="lokal GPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_lokal_gps"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn_google_gps" />

    <Button
        android:text="Save Point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:id="@+id/btn_speicherpunkt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_lati"
        android:layout_alignStart="@+id/btn_speicherpunkt"
        android:id="@+id/txt_gespeichert" />

    <Button
        android:text="Ausgabe Punkte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ausgabepunkte"
        android:layout_below="@+id/txt_lati"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_ausgabepunkte"
        android:layout_alignStart="@+id/txt_gespeichert"
        android:id="@+id/btn_eva" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/lokal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn_ausgabepunkte"
        android:layout_alignParentStart="true" />

</RelativeLayout>
